FROM ghcr.io/foundry-rs/foundry:latest

WORKDIR /app

# Copy contracts
COPY . .

# Install dependencies
RUN git config --global --add safe.directory /app && \
    git config --global --add safe.directory /app/lib/forge-std && \
    forge install || true

# Build contracts
RUN forge build || true

# Keep container running
CMD ["tail", "-f", "/dev/null"]









